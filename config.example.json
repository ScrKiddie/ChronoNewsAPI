{
  "web": {
    "base_url": "YOUR_APP_BASE_URL",
    "port": "YOUR_APP_PORT",
    "cors_origins": "*,https://example.com,https://anotherdomain.com",
    "client_url": "YOUR_FRONTEND_APP_URL",
    "client_paths": {
      "post": "/post",
      "category": "/berita",
      "reset": "/reset",
      "forgot": "/reset/request"
    }
  },
  "db": {
    "user": "YOUR_DB_USER",
    "password": "YOUR_DB_PASSWORD",
    "host": "YOUR_DB_HOST",
    "port": 5432,
    "name": "YOUR_DB_NAME",
    "sslmode": "require",
    "migration": false
  },
  "jwt": {
    "secret": "YOUR_JWT_SECRET_KEY",
    "exp": 24
  },
  "captcha": {
    "secret": "YOUR_TURNSTILE_SECRET_KEY"
  },
  "storage": {
    "mode": "YOUR_STORAGE_MODE",
    "cdn_url": "YOUR_R2_OR_S3_CDN_URL",
    "thumbnail": "./storage/thumbnail",
    "attachment": "./storage/attachment",
    "profile": "./storage/profile_picture",
    "s3": {
      "bucket": "YOUR_S3_BUCKET_NAME",
      "region": "YOUR_S3_REGION",
      "access_key": "YOUR_S3_ACCESS_KEY",
      "secret_key": "YOUR_S3_SECRET_KEY",
      "endpoint": "YOUR_S3_ENDPOINT_URL"
    }
  },
  "reset": {
    "exp": 2
  },
  "smtp": {
    "host": "YOUR_SMTP_HOST",
    "port": 587,
    "username": "YOUR_SMTP_USERNAME",
    "password": "YOUR_SMTP_PASSWORD",
    "from": {
      "name": "YOUR_SENDER_NAME",
      "email": "YOUR_SENDER_EMAIL"
    }
  },
  "test": {
    "jwt": {
      "secret": "YOUR_TEST_JWT_SECRET",
      "exp": 24
    },
    "web": {
      "port": "YOUR_TEST_APP_PORT",
      "cors_origins": "*"
    },
    "captcha": {
      "secret": {
        "pass": "1x0000000000000000000000000000000AA",
        "fail": "2x0000000000000000000000000000000AA",
        "usage": "3x0000000000000000000000000000000AA"
      }
    },
    "db": {
      "user": "YOUR_TEST_DB_USER",
      "password": "YOUR_TEST_DB_PASSWORD",
      "host": "YOUR_TEST_DB_HOST",
      "port": 5432,
      "name": "YOUR_TEST_DB_NAME",
      "sslmode": "disable"
    },
    "smtp": {
      "host": "localhost",
      "port": 1025,
      "username": "",
      "password": "",
      "from": {
        "name": "YOUR_TEST_SENDER_NAME",
        "email": "YOUR_TEST_SENDER_EMAIL"
      }
    }
  }
